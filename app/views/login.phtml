    <div class="standard-form-wrapper">
        <!-- Start Form wrapper -->
        <form method="post" action="{{ processForm }}" name="{{ formName }}" onsubmit="return validateLoginForm()">

            <input type="hidden" name="csrf_token" value="{{ csrftoken }}" >

            <div class="form_fields_wrapper">
